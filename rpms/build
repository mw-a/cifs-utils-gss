CentOS 8:
dnf --enablerepo=powertools install autoconf automake gcc keyutils-libs-devel krb5-devel libcap-ng-devel libtalloc-devel libwbclient-devel make pam-devel python3-docutils
rpmbuild -ba cifs-utils.spec --define="dist .el8.local1"

CentOS 7:
yum install autoconf automake gcc keyutils-libs-devel krb5-devel libcap-ng-devel libtalloc-devel make pam-devel python-docutils
rpmbuild -ba cifs-utils.spec --define="dist .el7.local1"
